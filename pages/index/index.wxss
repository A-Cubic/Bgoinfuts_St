page{
  height: 100%;
  background-image: linear-gradient(135deg, #91CCFC 0%, #5A8ADA 100%);
  /* background: #3fa6fa; */
}
.center{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 580rpx;
  height: 730rpx;
  overflow: hidden;
  background: #FFFFFF;
  box-shadow: 0 10px 20px 0 rgba(0,0,0,0.20);
  border-radius: 30rpx;
}
.warp{
  margin-top: 30rpx;
}
.des{
  color: #777;
  font-size: 20rpx;
  text-align: center;
}
.input_wrap {
  width: 100%;
  /* height: 112rpx; */
  border-bottom: 1rpx dashed #DFDFDF;
  /* position: relative; */
  display: flex;
   height: 100rpx;
  line-height: 100rpx;
}
.input_wrap_te {
  width: 220rpx;
  font-size: 30rpx;
  text-align: right;
}

.input_wrap_con {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  color: #909090;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  /* margin-left: 150rpx; */
  text-align: left;
}

.wrap-scan{
  /* border: 1px solid #a2ccfa; */
  border-radius: 30rpx;
  width: 300rpx;
  height: 300rpx;
  margin: 100rpx auto;
}
.wrap-scan image{
  width: 100%;
  /* margin: 75rpx; */
}
.btns{
  display: flex;

}
.btns .sign,.btns .consume{
  font-size: 28rpx;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background-image: linear-gradient(-45deg, #5A8ADA 0%, #91CCFC 100%);
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.20);
  border-radius: 2px;
    margin: 0 auto;
}

.btns .button-hover{
  opacity: 0.8;
}

button[disabled]:not([type]) {
  color:rgba(255, 255, 255, 0.8);
  background-image: linear-gradient(-45deg, #c7d4df 0%, #bbc6d8 100%);
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.20);
  border-radius: 1px;
}



.modal_input_wrap {
  width: 90%;
  /* height: 112rpx; */
  /* border: 1rpx solid #DFDFDF; */
  /* position: relative; */
  display: flex;
   height: 100rpx;
  line-height: 100rpx;
  margin: auto;
}
.modal_input_wrap_te {
  width: 100rpx;
  font-size: 30rpx;
  text-align: right;
}

.modal_input_wrap_con {
  border: 1rpx solid #DFDFDF;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 40rpx;
  color: #909090;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  /* margin-left: 150rpx; */
  text-align: left;
}